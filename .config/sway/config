set {
  $mod Mod4
  $lock sleep.sh
  $term tilix
  $editor env GDK_BACKEND=x11 emacs
#  $editor alacritty -e emacs -nw
  $browser firefox
  $feed quiterss
  $email evolution
  $gnome-schema org.gnome.desktop.interface

  $o_center eDP-1
  # $o_left "HDMI model"
}

output {
  $o_center background ~/Pictures/wallpaper.jpg fill
  # $o_left pos 1920 0 res 1920x1080
  $o_center pos 0 0 res 1920x1080
}

input type:keyboard {
  xkb_layout "us,ua"
  xkb_options "grp:shift_caps_switch,compose:prsc"
  xkb_numlock enable
}

input type:touchpad {
  tap enabled
  accel_profile adaptive
  click_method button_areas
  click_method clickfinger
  dwt enabled
  events disabled_on_external_mouse
  middle_emulation enable
  pointer_accel 0.5
  scroll_method two_finger
}

exec_always {
  gsettings set $gnome-schema gtk-theme 'gruvbox-dark-gtk'
  gsettings set $gnome-schema icon-theme 'gruvbox-dark-icons-gtk'
  gsettings set $gnome-schema font-name 'Hack 18'
  gsettings set $gnome-schema document-font-name 'Hack 18'
  gsettings set $gnome-schema text-scaling-factor 1.0
  gsettings set $gnome-schema cursor-theme 'capitaine-cursors'
}

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font pango:DejaVu Sans Mono 8
font "pango:Hack 18", "pango:FontAwesome 18"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod normal

workspace_layout tabbed

workspace 1 output $o_center
workspace 2 output $o_center
# workspace 3 output $o_left
# workspace 4 output $o_left

# assings
assign [class="Viber"] 2
assign [class="Wire"] 2
assign [app_id="evolution"] 2
assign [app_id="quiterss"] 3
for_window [app_id="quiterss"] floating enable

# resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
  bindsym --to-code {
    j resize shrink width 30 px or 30 ppt
    k resize grow height 30 px or 30 ppt
    l resize shrink height 30 px or 30 ppt
    semicolon resize grow width 30 px or 30 ppt

    # same bindings, but for the arrow keys
    Left resize shrink width 30 px or 30 ppt
    Down resize grow height 30 px or 30 ppt
    Up resize shrink height 30 px or 30 ppt
    Right resize grow width 30 px or 30 ppt

    # back to normal: Enter or Escape
    Return mode "default"
    Escape mode "default"
  }
}

bindsym --to-code {
  # start a terminal
  $mod+Return exec $term

  # kill focused window
  $mod+q kill

  # start j4-dmenu-desktop or bemenu (a program launcher)
  $mod+d exec j4-dmenu-desktop --dmenu='bemenu -l 15 -p drun' --display-binary --use-xdg-de --term=tilix --usage-log="$HOME/.j4.log"
  $mod+Shift+d exec bemenu-run -l 15 -p run

  # change focus
  $mod+j focus left
  $mod+k focus down
  $mod+i focus up
  $mod+l focus right

  # alternatively, you can use the cursor keys:
  $mod+Left focus left
  $mod+Down focus down
  $mod+Up focus up
  $mod+Right focus right

  # change focused container
  $mod+Tab focus right
  $mod+Shift+Tab focus left

  # move focused window
  $mod+Shift+j move left
  $mod+Shift+k move down
  $mod+Shift+l move up
  $mod+Shift+colon move right

  # alternatively, you can use the cursor keys:
  $mod+Shift+Left move left
  $mod+Shift+Down move down
  $mod+Shift+Up move up
  $mod+Shift+Right move right

  # split in horizontal orientation
  $mod+h split h

  # split in vertical orientation
  $mod+v split v

  # enter fullscreen mode for the focused container
  $mod+f fullscreen toggle

  # change container layout (stacked, tabbed, toggle split)
  $mod+s layout stacking
  $mod+w layout tabbed
  $mod+e layout toggle split

  # toggle tiling / floating
  $mod+Shift+space floating toggle

  # change focus between tiling / floating windows
  $mod+space focus mode_toggle

  # focus the parent container
  $mod+a focus parent

  # switch to workspace
  $mod+1 workspace 1
  $mod+2 workspace 2
  $mod+3 workspace 3
  $mod+4 workspace 4
  $mod+5 workspace 5
  $mod+6 workspace 6
  $mod+7 workspace 7
  $mod+8 workspace 8
  $mod+9 workspace 9
  $mod+0 workspace 10

  # move focused container to workspace
  $mod+Shift+1 move container to workspace 1
  $mod+Shift+2 move container to workspace 2
  $mod+Shift+3 move container to workspace 3
  $mod+Shift+4 move container to workspace 4
  $mod+Shift+5 move container to workspace 5
  $mod+Shift+6 move container to workspace 6
  $mod+Shift+7 move container to workspace 7
  $mod+Shift+8 move container to workspace 8
  $mod+Shift+9 move container to workspace 9
  $mod+Shift+0 move container to workspace 10

  # reload the configuration file
  $mod+Shift+c reload

  # restart sway inplace (preserves your layout/session, can be used to upgrade sway)
  $mod+Shift+r restart

  $mod+r mode "resize"

  # exit sway (logs you out of your X session)
  $mod+Shift+e exec "swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your X session.' -b 'Yes, exit sway' 'swaymsg exit'"

  # browser
  $mod+c exec $browser

  # tilix
  F1 exec $term --quake

  # pulseaudio
  $mod+p exec pavucontrol

  # radio
  $mod+Shift+p exec alacritty -e nvlc ~/.config/vlc/radio.xspf

  # default editor
  $mod+x exec $editor

  # Intellij
  $mod+b exec idea-ce

  # lock screen
  $mod+Control+z exec $lock

  # get clipboard history
  $mod+Control+a exec clipman pick --max-items=1000 -t bemenu -T'bemenu -l 10 -p clipman'

  # switch workspaces by mod+z
  $mod+z workspace next

  # reboot and shutdown
  $mod+Control+Shift+q exec systemctl poweroff
  $mod+Control+Shift+p exec systemctl reboot

  # toggle HDMI sound
  $mod+Control+Shift+s exec pactl --server "unix:$XDG_RUNTIME_DIR/pulse/native" set-card-profile 0 output:hdmi-stereo+input:analog-stereo
  $mod+Shift+s exec pactl --server "unix:$XDG_RUNTIME_DIR/pulse/native" set-card-profile 0 output:analog-stereo+input:analog-stereo

  # Pulse Audio controls
  XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% # increase sound volume
  XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% # decrease sound volume
  XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

  # Sreen brightness controls
  XF86MonBrightnessUp exec light -A 20 # increase screen brightness
  XF86MonBrightnessDown exec light -U 20 # decrease screen brightness
}


# The middle button over a titlebar kills the window
bindsym --release {
  Mod2+button2 kill
  button2 kill
}


# Start swaybar to display a workspace bar (plus the system information swaystatus
# finds out, if available)
bar {
  position top
  workspace_buttons yes
  tray_output $o_center
  colors {
    background #000000
    statusline #E1F5A9
    focused_workspace  #688A08 #688A08 #ffffff
    focused_statusline #688A08
    active_workspace   #333333 #5f676a #ffffff
    inactive_workspace #333333 #222222 #888888
    urgent_workspace   #2f343a #900000 #ffffff
    binding_mode       #2f343a #900000 #ffffff
  }
  bindsym --release {
    button4 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% # increase sound volume
    button5 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% # decrease sound volume
    button2 exec gsimplecal
  }
  font "pango:Hack 18", FontAwesome 18
  status_command i3status-rs $HOME/.config/sway/status.toml
}

