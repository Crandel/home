    DISPLAY \
    GNOME_DESKTOP_SESSION_ID \
    LIBVA_DRIVER_NAME \
    LP_NUM_THREADS \
    LS_COLORS \
    MAKEFLAGS \
    SSH_AUTH_SOCK \
    SWAYSOCK \
    WAYLAND_DISPLAY \
    WLR_DRM_NO_MODIFIERS \
    XDG_CURRENT_DESKTOP \
    XDG_SESSION_TYPE
exec hash dbus-update-activation-environment 2>/dev/null \
  && dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec --no-startup-id wl-paste -t text --watch clipman store --max-items=1000 1>> $HOME/.local/log/clipman.log 2>&1 &
exec --no-startup-id libinput-gestures -c ~/.config/libinput-gestures/sway.conf &
exec $term, resize set width 100 ppt height 100 ppt
exec swaykbdd
exec network-startup
exec swayidle \
         timeout 60 'swaymsg "output * dpms off"' \
              resume 'swaymsg "output * dpms on"'
