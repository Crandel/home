{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "margin": 1,
  // Choose the order of the modules
  "modules-left": [
    "hyprland/workspaces",
    "hyprland/submap",
    "hyprland/window",
    "systemd-failed-units"
  ],
  "modules-right": [
    "disk",
    "disk#data",
    "cpu",
    "memory",
    "battery",
    "temperature",
    "bluetooth",
    "pulseaudio#output",
    "pulseaudio#input",
    "backlight",
    "network#eth",
    "network#wifi",
    "network#vpn",
    "hyprland/language",
    "clock",
    "tray"
  ],
  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": false,
    "format": "{name}",
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },
  "hyprland/submap": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "hyprland/window": {
    "format": "{title:.15}",
    "separate-outputs": true
  },
  "systemd-failed-units": {
    "format": "{nr_failed_user}/{nr_failed_system}",
    "hide-on-ok": true
  },
  "disk": {
    "path": "/",
    "interval": 300,
    "format": "ğŸ“‚/ {free}",
    "states": {
      "warning": 80,
      "critical": 95
    }
  },
  "disk#data": {
    "path": "/data",
    "interval": 300,
    "format": "/d {free}",
    "states": {
      "warning": 80,
      "critical": 95
    }
  },
  "cpu": {
    "format": "ğŸ’» {avg_frequency}GHz",
    "states": {
      "good": 30,
      "warning": 50,
      "critical": 85
    }
  },
  "memory": {
    "format": "ğŸ’¾ {used:0.1f}G",
    "states": {
      "warning": 80,
      "critical": 95
    }
  },
  "battery": {
    "states": {
      "good": 90,
      "normal": 50,
      "warning": 30,
      "critical": 15
    },
    "format": "ğŸ”‹ {capacity}%",
    "format-charging": "ğŸ”Œ{capacity}%",
    "format-plugged": "ğŸ”Œ",
    "format-alt": "ğŸ”‹ {time}",
    "format-good": "ğŸ”‹", // An empty format will hide the module
    "format-full": "ğŸ”‹",
    "tooltip-format": "ğŸ”‹{capacity}% {time}"
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "ï‹‰ {temperatureC}Â°",
    "states": {
      "good": 90,
      "normal": 50,
      "warning": 30,
      "critical": 15
    },

  },
  "bluetooth": {
    "format": "",
    "format-connected": "ïŠ” {device_alias:.2}",
    "format-disabled": "",
    "format-connected-battery": "ğŸ§{device_alias:.2} {device_battery_percentage}%",
    "states": {
      "good": 90,
      "normal": 50,
      "warning": 30,
      "critical": 15
    },
  },
  "pulseaudio#output": {
    "format": "{icon} {volume}%",
    "format-muted": "ğŸ”‡",
    "format-icons": {
        "default": ["ğŸ”ˆ", "ğŸ”‰", "ğŸ”Š"]
    },
    "states": {
      "good": 90,
      "normal": 50,
      "warning": 30,
      "critical": 15
    },
    "scroll-step": 5,
    "on-click": "pavucontrol",
  },
  "pulseaudio#input": {
    "format": "{format_source}",
    "format-source": "ğŸ¤{volume}%",
    "format-source-muted": "ğŸ™",
    "scroll-step": 5,
    "states": {
      "good": 90,
      "normal": 50,
      "warning": 30,
      "critical": 15
    },
    "on-click": "pavucontrol",
  },
  "backlight": {
    "interval": 5,
