    "interval": 5,
    "format-wifi": "ğŸ“¡{signalStrength}% â‡Š{bandwidthDownBytes}",
    "format-disconnected": "",
    "tooltip-format-wifi": "{essid} {ipaddr} â‡ˆ{bandwidthUpBytes}|â‡Š{bandwidthDownBytes}",
    "tooltip-format-disconnected": ""
