{
  "include": [
    "$HOME/.config/waybar/sway.jsonc"
  ],
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "margin": 0,
  "spacing": 1,
  "fixed-center": false,
  // Choose the order of the modules
  "modules-right": [
    "disk",
    "disk#data",
    "cpu",
    "memory",
    "battery",
    "temperature",
    "bluetooth",
    "pulseaudio#output",
    "pulseaudio#input",
    "backlight",
    "network#eth",
    "network#wifi",
    "network#vpn",
    "sway/language",
    "clock",
    "tray"
  ],
  // Modules configuration
  "systemd-failed-units": {
    "format": "{nr_failed_user}/{nr_failed_system}",
    "hide-on-ok": true
  },
  "disk": {
    "path": "/",
    "interval": 300,
    "max-length": 10,
    "format": "ğŸ“‚ {free}",
    "states": {
      "warning": 80,
      "critical": 95
    }
  },
  "disk#data": {
    "path": "/data",
    "interval": 300,
    "max-length": 10,
    "format": "d {free}",
    "states": {
      "warning": 80,
      "critical": 95
    }
  },
  "disk#hdd": {
    "path": "/hdd",
    "interval": 300,
    "format": "h {free}",
    "states": {
      "warning": 80,
      "critical": 95
    }
  },
  "cpu": {
    "interval": 1,
    "format": "ğŸ’»{icon0}{icon1}{icon2}{icon3}{icon4}:{avg_frequency}",
    "format-icons": [
      "<span color='#69ff94'>â–</span>", // green
      "<span color='#2aa9ff'>â–‚</span>", // blue
      "<span color='#f8f8f2'>â–„</span>", // white
      "<span color='#ffffa5'>â–…</span>", // yellow
      "<span color='#dd532e'>â–ˆ</span>"  // red
    ]
  },
  "memory": {
    "format": "ğŸ’¾ {used:0.1f}G",
    "states": {
      "warning": 70,
      "critical": 95
    },
    "tooltip-format": "SWAP: {swapUsed:0.1f}G"
  },
  "battery": {
    "states": {
      "good": 90,
      "normal": 50,
      "warning": 30,
      "critical": 15
    },
    "format-charging": "âš¡{capacity}%",
    "format-plugged": "ğŸ”Œ",
    "format-alt": "ğŸ”‹{capacity}%:{time}",
    "format-good": "ğŸ”‹", // An empty format will hide the module
    "format-normal": "ğŸ”‹{capacity}%", // An empty format will hide the module
    "format-warning": "ğŸª«{capacity}% {time}", // An empty format will hide the module
    "format-critical": "ğŸª«{capacity}% {time}", // An empty format will hide the module
    "tooltip-format": "ğŸ”‹{capacity}%: {time}"
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "ğŸŒ¡{temperatureC}Â°",
    "format-critical": "ğŸŒ¡{temperatureC}Â°C",
    "tooltip-format": "ğŸŒ¡ {temperatureC}Â°C"
  },
  "bluetooth": {
    "format": "",
    "format-connected": "ïŠ“{device_alias:.2}",
    "format-disabled": "",
    "format-off": "!ïŠ“",
    "format-connected-battery": "ğŸ§{device_alias:.2}{device_battery_percentage}%"
  },
  "pulseaudio#output": {
    "format": "{icon} {volume}%",
    "format-muted": "ğŸ”‡",
    "format-icons": {
        "default": ["ğŸ”ˆ", "ğŸ”‰", "ğŸ”Š"]
    },
    "states": {
      "good": 90,
      "normal": 50,
      "warning": 30,
      "critical": 15
    },
    "scroll-step": 5,
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "pavucontrol"
  },
  "pulseaudio#input": {
    "format": "{format_source}",
    "format-source": "ğŸ¤{volume}%",
    "format-source-muted": "ğŸ™",
    "scroll-step": 5,
    "states": {
      "good": 90,
      "normal": 50,
      "warning": 30,
      "critical": 15
    },
    "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
    "on-click-right": "pavucontrol",
    "on-scroll-up": "pactl set-source-volume @DEFAULT_SOURCE@ +5%",
    "on-scroll-down": "pactl set-source-volume @DEFAULT_SOURCE@ -5%"
  },
  "backlight": {
    "interval": 5,
    "format": "{icon} {percent}%",
    "format-icons": ["ğŸŒ‘", "ğŸŒ˜", "ğŸŒ—", "ğŸŒ–", "ğŸŒ•"]
  },
  "network#eth": {
    "interface": "eth*", // (Optional) To force the use of this interface
    "interval": 5,
    "max-length": 8,
    "format": "ğŸŒâ‡Š{bandwidthDownBytes}",
    "format-disconnected": "",
    "tooltip-format": "{ipaddr} \n â‡ˆ{bandwidthUpBytes}|â‡Š{bandwidthDownBytes}",
    "tooltip-format-disconnected": ""
  },
  "network#wifi": {
    "interface": "wlan*", // (Optional) To force the use of this interface
    "interval": 5,
    "format-wifi": "ğŸ“¡{signalStrength}%â‡Š{bandwidthDownBytes}",
    "format-disconnected": "",
    "tooltip-format-wifi": "<big>{essid:.15}\n{ipaddr}</big>\n<small>â‡ˆ{bandwidthUpBytes}|â‡Š{bandwidthDownBytes}</small>",
    "tooltip-format-disconnected": ""
  },
  "network#vpn": {
    "interface": "tun*", // (Optional) To force the use of this interface
    "interval": 1,
    "format": "V",
    "format-disconnected": "",
    "tooltip-format-linked": "VPN {ipaddr}",
    "tooltip-format-disconnected": ""
  },
  "hyprland/language": {
    "min-length": 2
  },
  "clock": {
    "format": "âŒš {:%d %R}",
    "tooltip-format": "<big>{:%d %m %R}</big>\n<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode"          : "month",
      "weeks-pos"     : "right",
      "on-scroll"     : 1,
      "format": {
        "months":     "<span color='#ffead3'><b>{}</b></span>",
        "days":       "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
        "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions":  {
      "on-click": "gsimplecal",
      "on-click-right": "mode",
      "on-scroll-up": "tz_up",
      "on-scroll-down": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "tray": {
    "icon-size": 28,
    "spacing": 2
  }
}
