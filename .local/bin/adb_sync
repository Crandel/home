#!/usr/bin/env bash

declare -a arr=(
  "AlreaderX"
  "Android/obb"
  "Apks"
  "Backup"
  "Books"
  "DCIM"
  "Diaro"
  "Documents"
  "Download"
  "Fonts"
  "Music"
  "Notes"
  "OABX"
  "Pictures"
  "SamLib-Info"
  "TWRP"
  "Telegram"
  "VocalizerEx2"
  "dictdata"
  "termux"
  "valtGallery"
  "viber"
  "work"
)

for FolderStr in "${arr[@]}"
do
  echo "Download from /sdcard/$FolderStr"
  log_fol=/tmp/adb/$FolderStr
  mkdir -p $log_fol
  # --delete \
  adb-sync --reverse \
           --times \
           --copy-links \
           "/sdcard/$FolderStr/" \
           /data/backup/android/realme_x2_pro/$FolderStr \
           1> $log_fol/out.log \
           2> $log_fol/err.log
  # push to smart
  # adb-sync /data/backup/android/realme_x2_pro/$FolderStr/ /sdcard/$FolderStr/
  sleep 2
done

