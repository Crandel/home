#!/usr/bin/env bash

declare -a arr=(
  "Books"
  "DCIM"
  "Diaro"
  "Documents"
  "Download"
  "Fonts"
  "Music"
  "OABX"
  "Pictures"
  "SamLib-Info"
  "TWRP"
  "VocalizerEx2"
  "dictdata"
  "ivona"
  "progs"
  "termux"
  "valtGallery"
  "viber"
  "work"
)

for FolderStr in "${arr[@]}"
do
  echo "Download from /sdcard/$FolderStr"
  log_fol=/tmp/adb/$FolderStr
  mkdir -p $log_fol
  adb-sync --reverse \
           --times \
           "/sdcard/$FolderStr/" \
           /data/backup/android/realme_x2_pro/$FolderStr \
           1> $log_fol/out.log \
           2> $log_fol/err.log
  # push to smart
  # adb-sync /data/backup/android/realme_x2_pro/$FolderStr/ /sdcard/$FolderStr/
  sleep 2
done
