#! /bin/bash

function command_exists () {
  command -v "$1"  > /dev/null 2>&1;
}

local='lo'
connection=""
while [ "$connection" != "up" ] ; do
  for interface in /sys/class/net/* ; do
    if [[ ! "$interface" == *"$local"* ]]; then
      if [ -f $interface/operstate ]; then
        connection=$(cat $interface/operstate)
      fi
    fi
    if [ "$connection" == "up" ]; then
      break
    fi
  done
  sleep 0.5
done


sleep 0.5
echo "Start thunderbird" >> /tmp/network-startup.log
thunderbird &



sleep 0.5
echo "Start telegram" >> /tmp/network-startup.log
telegram-desktop &



sleep 0.5
echo "Start RSS reader" >> /tmp/network-startup.log
rssguard &

